{% extends 'base.html.twig' %}

{% block title %}{{'Product'|trans}}{% endblock %}

{% block body %}
    <h1>{{'Product'|trans}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{'product.name'|trans}}</th>
                <th>{{'product.description'|trans}}</th>
                <th>{{'product.price'|trans}}</th>
                <th>{{'product.stock'|trans}}</th>
                <th>{{'product.image'|trans}}</th>
                <th>{{'product.actions'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.stock }}</td>
                <td>{{ product.image }}</td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}">{{'Show'|trans}}</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}">{{'Edit'|trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">{{'error.notFound'|trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}">{{'Create'|trans}}</a>
{% endblock %}
