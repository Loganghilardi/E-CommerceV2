{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="container">
        <div class="row pt-2">
            <div class="col-6">
                <img style="max-width: 100%" src="{{'/uploads/' ~ product.image}}" alt="Image produit">
            </div>
            <div class="col-6">
                <div class="row">
                    <h1>{{ product.name }}</h1>
                    <div class="col-6">
                        <p>{{'Prix du produit'|trans}} : {{ product.price }}â‚¬</p>
                        <p>{{'Stock disponible'|trans}} : {{ product.stock }}</p>

                    </div>
                    <div class="col-4">
                        {% if is_granted('ROLE_ADMIN') %} 
                        <a class="btn btn-sm btn-secondary" href="{{ path('product_edit', {'id': product.id}) }}">{{'produit.edit'|trans}}</a>
                        {{ include('product/_delete_form.html.twig') }}
                        {% endif %}
                                 
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-12">
                <h3>{{'Description du produit'|trans}} : </h3>
                <p>{{ product.description }}</p>
            </div>
        </div>

    </div>
{% endblock %}
