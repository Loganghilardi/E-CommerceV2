{% extends 'base.html.twig' %}

{% block title %}{{'Product'|trans}}{% endblock %}

{% block body %}
    <h1>{{'Product'|trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>{{'product.name'|trans}}</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>{{'product.description'|trans}}</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>{{'product.price'|trans}}</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>{{'product.stock'|trans}}</th>
                <td>{{ product.stock }}</td>
            </tr>
            <tr>
                <th>{{'product.image'|trans}}</th>
                <td>{{ product.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">{{'BackToList'|trans}}</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">{{'Edit'|trans}}</a>

    <a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-primary">{{'product.addToCart'|trans}}</a>


    {{ include('product/_delete_form.html.twig') }}

{% endblock %}
