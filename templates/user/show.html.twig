{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>{{'Email'|trans}}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>{{'FirstName'|trans}}</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>{{'LastName'|trans}}</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>{{'Orders'|trans}}</th>
                <td>
                    {% for cart in user.carts %}
                        <!-- Calcul du montant de la commande ici  -->
                        {% if cart.status != false %}
                            <a href="{{path('cart_show', {'id':cart.id})}}">{{cart.id}} Date Montant</a>
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
    
    
    {% if app.user is not null and (is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN'))%}
        <a class="btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}">{{'Edit'|trans}}</a>
        <!-- Modifier uniquement le password -->
        <a class="btn btn-primary" href="{{ path('user_edit_password', {'id': user.id}) }}">{{'Edit password'|trans}}</a>
    {% endif %}
    
{% endblock %}
